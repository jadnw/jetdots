{
  "layer": "top",
  "position": "bottom",
  "height": 40,
  "modules-left": ["wlr/workspaces"],
  "modules-center": [],
  "modules-right": ["custom/recorder", "cpu", "memory", "network", "pulseaudio", "custom/idle-inhibitor", "custom/nightlight", "custom/notifications", "clock", "custom/power"],
  "margin-top": 0,
  "margin-left": 5,
  "margin-right": 5,
  "margin-bottom": 5,
  "spacing": 0,
  "name": "panel",
  "mode": "dock",
  "clock": {
    "timezone": "Asia/Ho_Chi_Minh",
    "interval": 60,
    "format": "{:%H:%M}",
    "max-length": 25,
  },
  "cpu": {
    "interval": 2,
    "format": "<span size='13pt'> </span>{avg_frequency:0.1f} GHz  {usage}%"
  },
  "idle_inhibitor": {
    "format": "{icon}",
    "format-icons": {
      "activated": "",
      "deactivated": "",
    },
  },
  "memory": {
    "interval": 2,
    "format": "<span size='15pt'> </span>{used:0.1f} GiB  {percentage}%"
  },
  "network": {
    "format": "",
    "format-ethernet": "",
    "format-wifi": "",
    "format-linked": "",
    "format-disconnected": "",
    "format-disable": "",
    "tooltip-format-ethernet": "Ethernet {ifname} - IP: {ipaddr} | {bandwidthUpBits} - {bandwidthDownBits}",
    "tooltip-format-wifi": "Wifi {essid} - Strength: {signalStrength}",
    "on-click": "nm-connection-editor"
  },
  "pulseaudio": {
    "format": "{icon}",
    "format-bluetooth": "{icon} ",
    "format-muted": "",
    "format-icons": {
      "headphone": "",
      "headset": "",
      "default": [ "", "", "" ]
    },
    "scroll-step": 5,
    "on-click": "pavucontrol",
    "on-click-right": "~/.config/waybar/scripts/pulseaudio toggle_mute"
  },
  "wlr/workspaces": {
    "format": "{icon}",
    "format-icons": {
      "1": "",
      "2": "",
      "3": "",
      "4": "",
      "5": "",
      "6": ""
    },
    "all-outputs": true,
    "active-only": false
  }, 
  "custom/idle-inhibitor": {
    "format": "{}",
    "return-type": "json",
    "interval": "once",
    "signal": 10,
    "exec": "~/.config/waybar/scripts/idle-inhibitor",
    "exec-if": "which swayidle",
    "on-click": "~/.config/waybar/scripts/idle-inhibitor toggle"
  },
  "custom/nightlight": {
    "format": "{}",
    "return-type": "json",
    "interval": "once",
    "signal": 4,
    "exec": "~/.config/waybar/scripts/nightlight",
    "exec-if": "which wlsunset",
    "on-click": "~/.config/waybar/scripts/nightlight toggle"
  },
  "custom/notifications": {
    "format": "{}",
    "return-type": "json",
    "interval": "once",
    "signal": 8,
    "exec": "~/.config/waybar/scripts/notifications",
    "exec-if": "which dunst",
    "on-click": "~/.config/waybar/scripts/notifications toggle",
    "on-click-right": "~/.config/waybar/scripts/notifications toggle-dnd"
  },
  "custom/power": {
    "format": "{}",
    "return-type": "json",
    "interval": "once",
    "signal": 1,
    "exec": "~/.config/waybar/scripts/power-river",
    "exec-if": "which rofi",
    "on-click": "~/.config/waybar/scripts/power-hyprland toggle"
  },
  "custom/recorder": {
    "format": "{}",
    "return-type": "json",
    "interval": "once",
    "signal": 6,
    "exec": "~/.config/waybar/scripts/recorder",
    "exec-if": "pgrep wf-recorder",
    "on-click": "~/.config/waybar/scripts/recorder toggle"
  }
}
