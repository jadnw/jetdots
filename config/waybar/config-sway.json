{
  "layer": "top",
  "position": "bottom",
  "height": 40,
  "modules-left": ["sway/workspaces", "sway/window"],
  "modules-center": [],
  "modules-right": ["custom/launcher", "custom/windows", "custom/documents", "custom/colorpicker", "custom/screenshot", "custom/recorder", "cpu", "memory", "network", "pulseaudio", "idle_inhibitor", "custom/nightlight", "custom/notifications", "clock", "custom/power"],
  "margin-top": 0,
  "margin-left": 5,
  "margin-right": 5,
  "margin-bottom": 5,
  "spacing": 0,
  "name": "panel",
  "mode": "dock",
  "clock": {
    "timezone": "Asia/Ho_Chi_Minh",
    "interval": 60,
    "format": "{:%H:%M}",
    "max-length": 25,
  },
  "cpu": {
    "interval": 2,
    "format": "<span size='14pt'> </span> {usage}%",
    "on-click": "alacritty -a btop -e btop"
  },
  "idle_inhibitor": {
    "format": "{icon}",
    "format-icons": {
      "activated": "",
      "deactivated": "",
    },
  },
  "memory": {
    "interval": 2,
    "format": "<span size='14pt'></span>  {percentage}%",
    "on-click": "alacritty -a btop -e btop"
  },
  "network": {
    "format": "",
    "format-ethernet": "",
    "format-wifi": "",
    "format-linked": "",
    "format-disconnected": "",
    "format-disable": "",
    "tooltip-format-ethernet": "Ethernet {ifname} - IP: {ipaddr} | {bandwidthUpBits} - {bandwidthDownBits}",
    "tooltip-format-wifi": "Wifi {essid} - Strength: {signalStrength}",
    "on-click": "nm-connection-editor"
  },
  "pulseaudio": {
    "format": "{icon}",
    "format-bluetooth": "{icon}",
    "format-muted": "",
    "format-icons": {
      "headphones": "",
      "headset": "",
      "default": ["", "", ""]
    },
    "scroll-step": 5,
    "on-click": "pavucontrol",
    "on-click-right": "~/.config/waybar/scripts/pulseaudio toggle_mute"
  },
  "sway/window": {
    "format": "{}",
    "max-length": 50,
    "align": 0
  },
  "sway/workspaces": {
    "disable-scroll": true,
    "all-outputs": true,
    "format": "{icon}",
    "format-icons": {
      "1": " ",
      "2": " ",
      "3": " ",
      "4": " ",
      "5": " ",
      "6": " ",
      "focused": " "
    },
    "persistent_workspaces": {
      "1": [],
      "2": [],
      "3": [],
      "4": [],
      "5": [],
      "6": []
    }
  },
  "custom/colorpicker": {
    "format": "{}",
    "return-type": "json",
    "interval": "once",
    "signal": 3,
    "exec": "~/.config/waybar/scripts/colorpicker",
    "exec-if": "which rofi",
    "on-click": "~/.config/waybar/scripts/colorpicker toggle"
  },
  "custom/documents": {
    "format": "{}",
    "return-type": "json",
    "interval": "once",
    "signal": 7,
    "exec": "~/.config/waybar/scripts/documents",
    "exec-if": "which rofi",
    "on-click": "~/.config/waybar/scripts/documents toggle"
  },
  "custom/launcher": {
    "format": "{}",
    "return-type": "json",
    "interval": "once",
    "signal": 2,
    "exec": "~/.config/waybar/scripts/launcher",
    "exec-if": "which rofi",
    "on-click": "~/.config/waybar/scripts/launcher toggle"
  },
  "custom/nightlight": {
    "format": "{}",
    "return-type": "json",
    "interval": "once",
    "signal": 4,
    "exec": "~/.config/waybar/scripts/nightlight",
    "exec-if": "which wlsunset",
    "on-click": "~/.config/waybar/scripts/nightlight toggle"
  },
  "custom/notifications": {
    "format": "{}",
    "return-type": "json",
    "interval": "once",
    "signal": 8,
    "exec": "~/.config/waybar/scripts/notifications",
    "exec-if": "which dunst",
    "on-click": "~/.config/waybar/scripts/notifications toggle",
    "on-click-right": "~/.config/waybar/scripts/notifications toggle-dnd"
  },
  "custom/power": {
    "format": "{}",
    "return-type": "json",
    "interval": "once",
    "signal": 1,
    "exec": "~/.config/waybar/scripts/power-sway",
    "exec-if": "which rofi",
    "on-click": "~/.config/waybar/scripts/power-sway toggle"
  },
  "custom/recorder": {
    "format": "{}",
    "return-type": "json",
    "interval": "once",
    "signal": 6,
    "exec": "~/.config/waybar/scripts/recorder",
    "exec-if": "which rofi",
    "on-click": "~/.config/waybar/scripts/recorder toggle"
  },
  "custom/screenshot": {
    "format": "{}",
    "return-type": "json",
    "interval": "once",
    "signal": 5,
    "exec": "~/.config/waybar/scripts/screenshot",
    "exec-if": "which rofi",
    "on-click": "~/.config/waybar/scripts/screenshot toggle"
  },
  "custom/windows": {
    "format": "{}",
    "return-type": "json",
    "interval": "once",
    "signal": 9,
    "exec": "~/.config/waybar/scripts/windows",
    "exec-if": "which rofi",
    "on-click": "~/.config/waybar/scripts/windows toggle"
  }
}
