{
  "layer": "top",
  "position": "bottom",
  "height": 38,
  "modules-left": ["sway/workspaces", "sway/window"],
  "modules-center": [],
  "modules-right": ["custom/recorder", "cpu", "memory", "network", "pulseaudio", "idle_inhibitor", "custom/nightlight", "custom/notifications", "clock", "custom/power"],
  "margin-top": 0,
  "margin-left": 5,
  "margin-right": 5,
  "margin-bottom": 5,
  "spacing": 0,
  "name": "panel",
  "mode": "dock",
  "clock": {
    "timezone": "Asia/Ho_Chi_Minh",
    "interval": 60,
    "format": "{:%H:%M}",
    "max-length": 25,
  },
  "cpu": {
    "interval": 2,
    "format": "<span size='13pt'> </span>{avg_frequency:0.1f} GHz  {usage}%",
    "on-click": "foot -T btop btop"
  },
  "idle_inhibitor": {
    "format": "{icon}",
    "format-icons": {
      "activated": "",
      "deactivated": "",
    },
  },
  "memory": {
    "interval": 2,
    "format": "<span size='15pt'> </span>{used:0.1f} GiB  {percentage}%",
    "on-click": "foot -T btop btop"
  },
  "network": {
    "format": "",
    "format-ethernet": "",
    "format-wifi": "",
    "format-linked": "",
    "format-disconnected": "",
    "format-disable": "",
    "tooltip-format-ethernet": "Ethernet {ifname} - IP: {ipaddr} | {bandwidthUpBits} - {bandwidthDownBits}",
    "tooltip-format-wifi": "Wifi {essid} - Strength: {signalStrength}",
    "on-click": "nm-connection-editor"
  },
  "pulseaudio": {
    "format": "{icon}",
    "format-bluetooth": "{icon} ",
    "format-muted": "",
    "format-icons": {
      "headphone": "",
      "headset": "",
      "default": [ "", "", "" ]
    },
    "scroll-step": 5,
    "on-click": "pavucontrol",
    "on-click-right": "~/.config/waybar/scripts/pulseaudio toggle_mute"
  },
  "sway/window": {
    "format": "{}",
    "max-length": 50,
    "align": 0
  },
  "sway/workspaces": {
    "disable-scroll": true,
    "all-outputs": true,
    "format": "{icon}",
    "format-icons": {
      "1": "",
      "2": "",
      "3": "",
      "4": "",
      "5": "",
      "6": ""
    },
    "persistent_workspaces": {
      "1": [],
      "2": [],
      "3": [],
      "4": [],
      "5": [],
      "6": []
    }
  },
  "custom/nightlight": {
    "format": "{}",
    "return-type": "json",
    "interval": "once",
    "signal": 4,
    "exec": "~/.config/waybar/scripts/nightlight",
    "exec-if": "which wlsunset",
    "on-click": "~/.config/waybar/scripts/nightlight toggle"
  },
  "custom/notifications": {
    "format": "{}",
    "return-type": "json",
    "interval": "once",
    "signal": 8,
    "exec": "~/.config/waybar/scripts/notifications",
    "exec-if": "which dunst",
    "on-click": "~/.config/waybar/scripts/notifications toggle",
    "on-click-right": "~/.config/waybar/scripts/notifications toggle-dnd"
  },
  "custom/power": {
    "format": "{}",
    "return-type": "json",
    "interval": "once",
    "signal": 1,
    "exec": "~/.config/waybar/scripts/power-sway",
    "exec-if": "which rofi",
    "on-click": "~/.config/waybar/scripts/power-sway toggle"
  },
  "custom/recorder": {
    "format": "{}",
    "return-type": "json",
    "interval": "once",
    "signal": 6,
    "exec": "~/.config/waybar/scripts/recorder",
    "exec-if": "pgrep wf-recorder",
    "on-click": "~/.config/waybar/scripts/recorder toggle"
  }
}
